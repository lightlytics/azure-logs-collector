{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "apiUrl": {
      "type": "string",
      "defaultValue": "https://app.streamsec.io",
      "metadata": {
        "description": "API URL for log forwarding"
      }
    },
    "apiUrlSuffix": {
      "type": "string",
      "defaultValue": "github-audit",
      "metadata": {
        "description": "API URL endpoint suffix for log forwarding"
      }
    },
    "apiCollectionToken": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Collection token used for authentication"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Storage Account Name"
      }
    },
    "blobContainerName": {
      "type": "string",
      "metadata": {
        "description": "Blob container to monitor for new files"
      }
    }
  },
  "variables": {
    "functionAppName": "[format('streamsec-file-fw-{0}', uniqueString(resourceGroup().id))]",
    "hostingPlanName": "[format('streamsec-file-fw-{0}', uniqueString(resourceGroup().id))]",
    "applicationInsightsName": "[format('streamsec-file-fw-{0}', uniqueString(resourceGroup().id))]",
    "functionWorkerRuntime": "node",
    "packageUri": "https://github.com/lightlytics/azure-log-collectors/releases/download/1.0.2/file-collector.zip"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-03-01",
      "name": "[variables('hostingPlanName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Y1",
        "tier": "Dynamic"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-03-01",
      "name": "[variables('functionAppName')]",
      "location": "[resourceGroup().location]",
      "kind": "functionapp",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "httpsOnly": true,
        "publicNetworkAccess": "Disabled",
        "clientCertEnabled": true,
        "clientCertMode": "Required",
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), '2021-04-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "[variables('functionWorkerRuntime')]"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "[variables('packageUri')]"
            },
            {
              "name": "API_URL",
              "value": "[parameters('apiUrl')]"
            },
            {
              "name": "API_URL_SUFFIX",
              "value": "[parameters('apiUrlSuffix')]"
            },
            {
              "name": "API_TOKEN",
              "value": "[parameters('apiCollectionToken')]"
            },
            {
              "name": "BLOB_CONTAINER",
              "value": "[parameters('blobContainerName')]"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers/providers/roleAssignments",
      "apiVersion": "2022-04-01",
      "name": "[format('{0}/default/{1}/Microsoft.Authorization/{2}', parameters('storageAccountName'), parameters('blobContainerName'), guid(variables('functionAppName'), parameters('blobContainerName')))]",
      "properties": {
        "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', 'ba92f5b4-2d11-453d-a403-e96b0029c9fe')]",
        "principalId": "[reference(resourceId('Microsoft.Web/sites', variables('functionAppName')), '2021-03-01', 'Full').identity.principalId]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
      ]
    }
  ],
  "outputs": {
    "functionAppName": {
      "type": "string",
      "value": "[variables('functionAppName')]"
    }
  }
}

